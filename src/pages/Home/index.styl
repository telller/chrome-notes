.chrome-notes
  background #1d1f21
  color #fff
  .quill
    padding: 40px 20px 50vh;
    position: relative;
    text-align: initial;
    max-width: calc(80ch + 40px);
    margin: auto;
    min-height calc(100vh)
    cursor text
    .ql-container
      width 100%
      height 100%
      border none
      .ql-editor
        letter-spacing 1.4px
        line-height: 1.3;
        font-size 16px
        width 100%
        height 100%
        padding 0
        overflow-wrap break-word
        white-space pre-wrap
        caret-color #3c3

::selection
  background rgba(51,204,51,.4)
